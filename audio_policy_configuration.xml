            </devicePort>
            <devicePort tagName="bus3_out_call_ring" role="sink" type="AUDIO_DEVICE_OUT_BUS" address="bus3_out_call_ring">
              <profile name="" format="AUDIO_FORMAT_PCM_16_BIT"
